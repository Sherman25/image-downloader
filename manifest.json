{
    "name": "Bulk Image Downloader",
    "description": "Download every image on a web page",
    "version": "1.0.0",
    "browser_action": {
        "default_popup": "popup/index.html"
    },
    "permissions": [
        "<all_urls>", 
        "tabs", 
        "activeTab"
    ],
    "background": {
        "scripts": [
            "jquery-3.6.1.min.js", 
            "background.js"
        ]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": [
            "jquery-3.6.1.min.js", 
            "content.js"
        ]
    }],
    "manifest_version": 2
}
